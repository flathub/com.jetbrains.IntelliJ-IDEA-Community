{
    "app-id": "com.jetbrains.IntelliJ-IDEA-Community",
    "runtime": "org.freedesktop.Sdk",
    "runtime-version": "25.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "idea-wrapper",
    "finish-args": [
        "--device=all",
        "--env=IDEA_PROPERTIES=/app/bin/idea.properties",
        "--env=JAVA_HOME=/app/extra/jbr",
        "--filesystem=home",
        "--filesystem=xdg-run/app/com.discordapp.Discord:create",
        "--filesystem=xdg-run/docker",
        "--filesystem=xdg-run/gnupg",
        "--filesystem=xdg-run/keyring",
        "--filesystem=xdg-run/pipewire-0",
        "--filesystem=xdg-run/podman",
        "--share=ipc",
        "--share=network",
        "--socket=ssh-auth",
        "--socket=gpg-agent",
        "--socket=pulseaudio",
        "--socket=x11",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets"
    ],
    "modules": [
        {
            "name": "idea",
            "build-commands": [
                "install -D -t ${FLATPAK_DEST}/bin/ apply_extra idea.properties",
                "install -Dm644 -t ${FLATPAK_DEST}/share/applications/ ${FLATPAK_ID}.desktop",
                "install -Dm644 -t ${FLATPAK_DEST}/share/metainfo/ ${FLATPAK_ID}.metainfo.xml",
                "install -Dm644 -t ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/ ${FLATPAK_ID}.svg"
            ],
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "extra-data",
                    "filename": "idea.tar.gz",
                    "only-arches": [
                        "aarch64"
                    ],
                    "sha256": "f51d2e9428a7d9c3999cc9dfab5fbcccba73d894098724cc5e35865a21932090",
                    "size": 1209329354,
                    "url": "https://download.jetbrains.com/idea/ideaIC-2025.2.3-aarch64.tar.gz",
                    "x-checker-data": {
                        "code": "IIC",
                        "is-main-source": true,
                        "type": "jetbrains"
                    }
                },
                {
                    "type": "extra-data",
                    "filename": "idea.tar.gz",
                    "only-arches": [
                        "x86_64"
                    ],
                    "sha256": "6b7c671e97b1419ca22ff4c4a32e7ca51577e4177589bfd321bd9a26df16c9ba",
                    "size": 1211852257,
                    "url": "https://download.jetbrains.com/idea/ideaIC-2025.2.3.tar.gz",
                    "x-checker-data": {
                        "code": "IIC",
                        "is-main-source": true,
                        "type": "jetbrains"
                    }
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.IntelliJ-IDEA-Community.desktop"
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.IntelliJ-IDEA-Community.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "idea.properties"
                },
                {
                    "type": "file",
                    "path": "com.jetbrains.IntelliJ-IDEA-Community.svg"
                },
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "tar xzf idea.tar.gz --strip-components=1",
                        "rm idea.tar.gz"
                    ]
                }
            ]
        },
        {
            "name": "ide-flatpak-wrapper",
            "buildsystem": "meson",
            "config-opts": [
                "-Deditor_binary=/app/extra/bin/idea",
                "-Deditor_title=IntelliJ IDEA Community",
                "-Dprogram_name=idea-wrapper",
                "-Dfirst_run_template=README.md",
                "-Dflagfile_prefix=flatpak-idea"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": "ide-flatpak-wrapper"
                },
                {
                    "type": "file",
                    "path": "README.md"
                }
            ]
        }
    ]
}
