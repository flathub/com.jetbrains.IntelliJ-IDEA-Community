{
  "app-id": "com.jetbrains.IntelliJ-IDEA-Community",
  "command": "idea",
  "runtime": "org.freedesktop.Sdk",
  "runtime-version": "18.08",
  "sdk": "org.freedesktop.Sdk",
  "separate-locales": false,
  "finish-args": [
    "--device=all",
    "--device=dri",
    "--env=IDEA_JDK=/app/idea-IC/jre64/",
    "--env=IDEA_VM_OPTIONS=/app/idea-IC/bin/idea64.vmoptions",
    "--filesystem=host",
    "--share=ipc",
    "--share=network",
    "--socket=x11",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.freedesktop.secrets"
  ],
  "modules": [
    "shared-modules/gtk2/gtk2.json",
    {
      "name": "libsecret",
      "cleanup": [
        "/bin",
        "/include",
        "/lib/*.la",
        "/lib/debug",
        "/lib/pkgconfig"
      ],
      "config-opts": [
        "--disable-gtk-doc",
        "--disable-introspection",
        "--disable-manpages",
        "--disable-static"
      ],
      "sources": [
        {
          "type": "archive",
          "sha256": "047a15af3a0eaf3344c10f138fe21561052104abd05d18d85b438e1d002c5ac3",
          "url": "https://gitlab.gnome.org/GNOME/libsecret/-/archive/0.18.7/libsecret-0.18.7.tar.gz"
        }
      ]
    },
    {
      "name": "idea-ic",
      "buildsystem": "simple",
      "build-commands": [
        "install -d -m0755 /app/idea-IC/",
        "tar -xzf ideaIC*.tar.gz --directory=/app/idea-IC/ --strip-components=1",
        "install -D -m0644 /app/idea-IC/bin/idea.svg /app/share/icons/hicolor/scalable/apps/${FLATPAK_ID}.svg",
        "install -D -m0755 idea.sh /app/bin/idea",
        "install -D -m0644 -t /app/share/applications/ ${FLATPAK_ID}.desktop",
        "install -D -m0644 -t /app/share/metainfo/ ${FLATPAK_ID}.appdata.xml"
      ],
      "sources": [
        {
          "type": "file",
          "sha256": "467f24052255570c95bfb510dd00ce170ea5099e214348ebb0ad9d952c29b4cc",
          "url": "https://download.jetbrains.com/idea/ideaIC-2018.3.6.tar.gz"
        },
        {
          "type": "file",
          "path": "com.jetbrains.IntelliJ-IDEA-Community.appdata.xml"
        },
        {
          "type": "file",
          "path": "com.jetbrains.IntelliJ-IDEA-Community.desktop"
        },
        {
          "type": "script",
          "commands": ["exec env JAVA_TOOL_OPTIONS=-Djava.io.tmpdir=${XDG_CACHE_HOME}/tmp/ TMPDIR=${XDG_CACHE_HOME}/tmp/ /app/idea-IC/bin/idea.sh \"$@\""],
          "dest-filename": "idea.sh"
        }
      ]
    }
  ]
}
